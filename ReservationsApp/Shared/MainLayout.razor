
@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
	<MudAppBar Style="@($"background:#f31515; color:#fff;")">
		<MudIconButton Icon="@Icons.Material.Filled.DownhillSkiing" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
		<MudText > PK'S Ski and Sports | Reservation Portal</MudText>
		<MudSpacer/>
		<PricesButton />
	</MudAppBar>

	<MudMainContent>
		@Body
	</MudMainContent>
</MudLayout>
@code {
	bool _drawerOpen = true;

	void DrawerToggle()
	{
		_drawerOpen = !_drawerOpen;
	}

	
}