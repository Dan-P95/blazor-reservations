					<MudItem xs="6">
						<MudText Typo="Typo.h6">$55 per/day</MudText>
					</MudItem>
					<MudItem xs="6">
						<MudText Typo="Typo.h6">Performance</MudText>
					</MudItem>
					<MudItem xs="6">
						<MudText Typo="Typo.h6">$70 per/day</MudText>
